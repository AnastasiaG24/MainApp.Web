@{
    ViewBag.Title = "Rezerveaza_calatorie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">Rezervează online</h3>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Acasă</a></li>
            <li class="breadcrumb-item"><a href="#">Pagini</a></li>
            <li class="breadcrumb-item active text-white">Rezervează online</li>
        </ol>
    </div>
</div>
<!-- Header End -->
<!-- Tour Booking Start -->
<div class="container py-5">
    <div class="row g-5 align-items-start">
        <!-- Stânga -->
        <div class="col-lg-6">
            <h5 class="text-primary fw-bold">REZERVARE</h5>
            <h1 class="mb-4">Rezervează online</h1>
            <p class="mb-4">Planifică-ți vacanța fără griji! Cu doar câteva click-uri, poți rezerva cele mai bune hoteluri, zboruri și experiențe de neuitat.</p>
            <ul class="list-unstyled">
                <li>✓ Cazare la cele mai bune prețuri</li>
                <li>✓ Zboruri convenabile către destinația dorită</li>
                <li>✓ Excursii și activități personalizate</li>
                <li>✓ Suport 24/7 pentru o călătorie fără stres</li>
                <li>✓ Rezervă acum și pornește în aventura vieții tale!</li>
            </ul>
            <a href="/Services" class="btn btn-outline-primary rounded-pill py-2 px-4 mt-3">Citește mai mult</a>
        </div>

        <!-- Dreapta -->
        <div class="col-lg-6">
            <div class="bg-light rounded p-4 shadow">
                <h3 class="text-center mb-3">Rezervă un Tur – Oferte Speciale!</h3>
                <p class="text-center">Primește <span class="text-warning fw-bold">50% reducere</span> la prima ta călătorie!</p>

                @using (Html.BeginForm("OfertaRezervare", "Rezervare", FormMethod.Post))
                {
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="nume" name="nume" placeholder="Nume" required />
                                <label for="nume">Nume</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required />
                                <label for="email">E-mail</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select" id="destinatie" name="destinatie" required>
                                    <option value="">Alege destinația</option>
                                    <option value="venetia">Veneția</option>
                                    <option value="montblanc">Mont Blanc</option>
                                    <option value="kyoto">Kyoto</option>
                                    <option value="thailanda">Thailanda</option>
                                </select>
                                <label for="destinatie">Destinație</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <select class="form-select" id="persoane" name="persoane" required>
                                    <option value="">Număr persoane</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                                <label for="persoane">Persoane</label>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" id="cerere" name="cerere" placeholder="Cerere specială" style="height: 100px"></textarea>
                                <label for="cerere">Cerere specială</label>
                            </div>
                        </div>

                        <div class="col-12">
                            @if (Session["Username"] != null)
                            {
                                <button type="submit" class="btn btn-primary w-100 py-2">Rezervă acum</button>
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Login")" class="btn btn-outline-primary w-100 py-2">Autentifică-te pentru a rezerva</a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Tour Booking End -->
<!-- Subscribe Start -->
<div class="container-fluid bg-dark text-white py-5 mt-5">
    <div class="container text-center">
        <h5 class="subscribe-title">ABONEAZĂ-TE</h5>
        <h2 class="mb-3">Newsletter</h2>
        <p class="mb-4">Fii primul care află despre oferte speciale, noutăți și evenimente exclusive!</p>
        <div class="row justify-content-center">
            <div class="col-md-6 position-relative">
                <input class="form-control rounded-pill py-3 ps-4 pe-5" type="text" placeholder="Your email">
                <button type="button" class="btn btn-primary rounded-pill position-absolute top-0 end-0 py-2 px-4 mt-2 me-2">Abonare</button>
            </div>
        </div>
    </div>
</div>
<!-- Subscribe End -->
