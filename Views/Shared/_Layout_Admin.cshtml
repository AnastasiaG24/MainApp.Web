@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin - AAG Voyage</title>
    <link rel="icon" type="image/png" href="~/Content/img/airplane.jpg">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap + FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Custom CSS (optional) -->
    <style>
        body {
            display: flex;
            min-height: 100vh;
        }

        #sidebar {
            width: 250px;
            background-color: #001f3f;
            color: white;
            flex-shrink: 0;
        }

            #sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 15px;
            }

                #sidebar a:hover {
                    background-color: #495057;
                }

        #content {
            flex-grow: 1;
            padding: 20px;
            background-color: #f8f9fa;
        }

        .box-button {
            background-color: #001f3f;
            color: white;
            padding: 15px;
            text-align: center;
            border-radius: 10px;
            display: block;
            margin-top: 15px;
            font-size: 16px;
            text-decoration: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .box-button:hover {
                background-color: #495057; 
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar">
        <h4 class="text-center py-3 border-bottom">Admin</h4>
        <a href="/Admin/Dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
        <a href="/Admin/Users"><i class="fas fa-users me-2"></i>Utilizatori</a>
        <a href="/Admin/Reports"><i class="fas fa-chart-line me-2"></i>Rapoarte</a>
        <a href="/Account/Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>

        <!-- Caseta pentru întoarcerea la pagina principală -->
        <a href="/Home/Index">
            <i class="fas fa-home me-2"></i>Pagina principală
        </a>
    </div>

    <!-- Main Content -->
    <div id="content">
        <nav class="navbar navbar-light bg-light mb-3 shadow-sm rounded">
            <div class="container-fluid">
               
            </div>
        </nav>

        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
