@{
    ViewBag.Title = "Rezervare ofertă";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ✅ Stil doar pentru această pagină -->
<style>
    body {
        background-color: #e0e5ec !important;
    }

    .navbar-brand {
        color: white !important;
    }
</style>

<!-- ✅ Conținut centrat și stilizat -->
<div class="container py-5 mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4 p-4 bg-white">
                <h2 class="mb-4 text-center text-primary">Rezervă: @ViewBag.Titlu</h2>
                <p><strong>Preț:</strong> @ViewBag.Pret</p>
                <p><strong>Durată:</strong> @ViewBag.Zile</p>

                <form method="post" action="#">
                    <div class="mb-3">
                        <label for="nume" class="form-label">Nume</label>
                        <input type="text" class="form-control" id="nume" name="nume" required />
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                    <div class="mb-3">
                        <label for="persoane" class="form-label">Număr persoane</label>
                        <select class="form-control" id="persoane" name="persoane">
                            <option>1</option>
                            <option selected>2</option>
                            <option>3</option>
                            <option>4+</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="cerere" class="form-label">Cereri speciale</label>
                        <textarea class="form-control" id="cerere" name="cerere" rows="3"></textarea>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill">
                            Trimite rezervarea
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
