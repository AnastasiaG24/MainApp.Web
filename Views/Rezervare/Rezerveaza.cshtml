@model eUseControl.Domain.Entities.RezervareOferta
@{
    var oferta = ViewBag.Oferta as eUseControl.Domain.Entities.Product.Ofert;
    ViewBag.Title = "Rezervează oferta";
    Layout = "~/Views/Shared/_RezervareLayout.cshtml";
}

<h2>Rezervă: @oferta.Name</h2>
<p><strong>Preț:</strong> @oferta.Price Lei</p>
<p><strong>Durată:</strong> @(oferta.EndDate.Subtract(oferta.StartDate).Days) zile</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Destinatie)

    <div class="mb-3">
        @Html.LabelFor(m => m.Nume)
        @Html.TextBoxFor(m => m.Nume, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.NumarPersoane)
        @Html.TextBoxFor(m => m.NumarPersoane, new { @class = "form-control", type = "number" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Cerere)
        @Html.TextAreaFor(m => m.Cerere, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Trimite rezervarea</button>
}
