@{
    ViewBag.Title = "Rezervare - Confirmare";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Stiluri personalizate pentru această pagină -->
<style>
    .confirmare-rezervare {
        background-color: #f4f8fb;
        min-height: 75vh;
    }

    .confirmare-card {
        border-radius: 1rem;
    }

    .btn-revenire {
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
    }
</style>

<div class="container confirmare-rezervare py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow confirmare-card p-4 text-center bg-white">
                <h2 class="text-success mb-3">🎉 Rezervarea a fost trimisă!</h2>
                <p class="lead">Vă mulțumim că ați ales <strong>AAG - Voyage</strong>.</p>
                <p class="mb-4">Veți primi un email de confirmare cu detaliile călătaoriei.</p>
                <hr />
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-revenire rounded-pill">
                    ⬅️ Înapoi la pagina principală
                </a>
            </div>
        </div>
    </div>
</div>
