@model eUseControl.Domain.Entities.User.UserRegisterData

@{
    ViewBag.Title = "Înregistrare";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/png" href="~/Content/img/airplane.jpg" />
    <style>
        body {
            background: #f7f7f7;
            font-family: 'Segoe UI', sans-serif;
        }

        .register-container {
            max-width: 450px;
            margin: 80px auto;
            padding: 30px 40px;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }

        .register-title {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-primary {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 8px;
        }

        .validation-message {
            color: #dc3545;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h2 class="register-title">Înregistrare</h2>

        @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.Credential, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Credential, new { @class = "form-control", placeholder = "Nume de utilizator" })
                @Html.ValidationMessageFor(m => m.Credential, "", new { @class = "validation-message" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parolă" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-message" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmă parola" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "validation-message" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-message" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(m => m.Country, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Țara" })
                @Html.ValidationMessageFor(m => m.Country, "", new { @class = "validation-message" })
            </div>

            <div class="d-grid">
                <input type="submit" value="Înregistrează-te" class="btn btn-primary" />
            </div>
        }
    </div>
</body>
</html>
