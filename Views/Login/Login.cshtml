@model MainApp.Web.Models.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Autentificare</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
            <h2 class="text-center mb-4">Autentificare</h2>

            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.Credential, "Nume de utilizator sau email")
                @Html.TextBoxFor(m => m.Credential, new { @class = "form-control", @placeholder = "Introdu numele de utilizator" })
                @Html.ValidationMessageFor(m => m.Credential, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password, "Parolă")
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Introdu parola" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary w-100">Autentificare</button>
            }

            <div class="mt-3 text-center">
                <a href="@Url.Action("Register", "Login")">Nu ai cont? Înregistrează-te</a>
            </div>
        </div>
    </div>
</body>
</html>
